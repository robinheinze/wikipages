<h2>Edit phone for <%=@contact.name%></h2>

<% if @phone.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @phone.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/contacts/<%=@contact.id%>/phones/<%=@phone.id%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="number">New Number: </label>
  <input id="number" name="number" type="text" value="<%= @phone.number %>">
</form>
