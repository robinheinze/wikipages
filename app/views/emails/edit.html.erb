<h1>Edit email</h1>

<% if @email.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @email.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/contacts/<%= @contact.id %>/emails/<%= @email.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="email_address">Name</label>
  <input id="email_address" name="email_address" type="text" value="<%= @email.email_address %>">
  <button>Update Email</button>
</form>
