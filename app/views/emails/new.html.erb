<h1>New email address for <%= @email.contact.name %></h1>

<% if @email.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @email.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/contacts/<%= @email.contact_id %>/emails" method="post">
  <label for="email_address">Address</label>
  <input id="email_address" name="email_address" type="text" value="<%= @email.email_address %>">
  <button>Add email</button>
</form>
